  <div class="container form">
    <h2>Sign up</h2>

      <%= form_for @user, url: create_user_users_path do |f| %>

        <%= f.select :current_league, collection: User::LEAGUES %>

        <%= f.select :current_division, collection: User::DIVISIONS %>


        <%= f.select :desired_league, collection: User::LEAGUES %>

        <%= f.select :desired_division, collection: User::DIVISIONS %>

        <%= f.number_field :price, id:'calc_price', readonly: true%>

        <div class='row'>
          <div class='btn btn-default' id='show_reg'>ok</div>
        </div>



        <div id="h_reg">
            <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>

            <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password confirmation' %>


            <%= f.submit "Sign up", class: 'btn-submit' %>
        </div>
      <% end %>
  </div>
