  <div class="container form">
    <% if user_signed_in? %>
        
      <div class="text-border">
        
        <%= form_for @user, url: users_path, method: :put do |f| %>

          <div class="row">
            <div class="col-md-4">
              <h4>Current league:</h4>
              <h3><%= f.select :current_league, User::LEAGUES, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Server:</h4>
              <h3><%= f.select :server, User::SERVERS, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Desired league:</h4>
              <h3><%= f.select :desired_league, User::LEAGUES, {}, { :class => "form-control"} %></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <h4>Current division:</h4>
              <h3><%= f.select :current_division, User::DIVISIONS, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Lp per win:</h4>
              <h3><%= f.select :lp_per_win, User::LP_PER_WIN, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Desired division:</h4>
              <h3><%= f.select :desired_division, User::DIVISIONS, {}, { :class => "form-control"} %></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4" colspan="2"><h4 id='calc_price'></h4></div>
            <div><%= f.number_field :price, id: 'calc_price1', readonly: true %></div>   
          </div>

          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"><%= f.submit "buy", class: 'btn-submit' %></div>
          </div>

        <% end %>
        
      </div>

    <% else %>

      <div class="text-border">
        
        <%= form_for @user, url: create_user_users_path, method: :put do |f| %>

          <div class="row">
            <div class="col-md-4">
              <h4>Current league:</h4>
              <h3><%= f.select :current_league, User::LEAGUES, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Server:</h4>
              <h3><%= f.select :server, User::SERVERS, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Desired league:</h4>
              <h3><%= f.select :desired_league, User::LEAGUES, {}, { :class => "form-control"} %></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <h4>Current division:</h4>
              <h3><%= f.select :current_division, User::DIVISIONS, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Lp per win:</h4>
              <h3><%= f.select :lp_per_win, User::LP_PER_WIN, {}, { :class => "form-control"} %></h3>
            </div>
            <div class="col-md-4">
              <h4>Desired division:</h4>
              <h3><%= f.select :desired_division, User::DIVISIONS, {}, { :class => "form-control"} %></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4" colspan="2"><h4 id='calc_price'></h4></div>
            <div><%= f.number_field :price, id: 'calc_price1', readonly: true %></div>   
          </div>

          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"><div class="btn btn-submit show_reg">Continue</div></div>
          </div>

          <div id="h_reg">

            <%= f.text_field :nickname, autofocus: true, :placeholder => 'Nickname' %>

            <%= f.email_field :email, :placeholder => "Email", autocomplete: "on" %>

            <%= f.text_field :skype, :placeholder => 'Skype' %>

            <%= f.password_field :password, autocomplete: "on", :placeholder => 'Password' %>
            
            <%= f.password_field :password_confirmation, autocomplete: "on", :placeholder => 'Password confirmation' %>

            <%= f.submit "Buy", class: 'btn-submit' %>

          </div>

        <% end %>

      </div>
    <% end %>
  </div>
