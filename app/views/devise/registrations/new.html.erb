<% provide(:title, '| Registration') %>
<div class="login">
  <div class="container form">
    <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form">
          <%= f.text_field :nickname, autofocus: true, :placeholder => "Nickname" %>

          <%= f.email_field :email, :placeholder => "Email" %>

          <%= f.text_field :skype, :placeholder => "Skype" %>
        </div>

        <div class="field form">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password confirmation' %>
        </div>

        <div class="actions form">
          <%= f.submit "Sign up", class: 'btn-submit' %>
        </div>
      <% end %>

    <div class="form">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>